<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/color_action_bar_bg</item>
        <item name="android:actionMenuTextColor">@color/color_action_text</item>
        <item name="android:actionBarStyle">@style/action_bar_theme</item>
    </style>

    <style name="action_bar_theme" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@color/color_action_bar_bg</item>
    </style>

    <!-- Theme for details view -->
    <style name="AppTheme.SemiActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/action_bar_theme_semi_transparent</item>
    </style>

    <style name="action_bar_theme_semi_transparent" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>