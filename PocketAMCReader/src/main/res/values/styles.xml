    <!-- Theme for list view -->
    <style name="ListText">
        <item name="android:textColor">@color/list_text</item>
    </style>

    <style name="ListTextTitle" parent="ListText">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/primary_text_dark_nostates</item>
    </style>

    <!-- Theme for grid view -->
    <style name="GridTextTitle">
        <!--<item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>-->
        <item name="android:textColor">@color/primary_text_dark_nostates</item>
    </style>

    <!-- Specific styles -->
    <style name="DetailsFragmentTitle" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:background">@color/detail_title_background</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="fontPath">fonts/RobotoCondensed-Bold.ttf</item>
    </style>

    <style name="BasicValue">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginTop">@dimen/detail_basic_spacing</item>
        <item name="android:layout_marginBottom">@dimen/detail_basic_spacing</item>
    </style>

    <style name="BasicExtra">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_marginLeft">@dimen/detail_basic_spacing</item>
        <item name="android:layout_marginTop">@dimen/detail_basic_spacing</item>
        <item name="android:layout_marginBottom">@dimen/detail_basic_spacing</item>
    </style>

    <style name="BasicExtra.Label">
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:layout_marginRight">@dimen/detail_basic_spacing</item>
    </style>

    <style name="Label">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginBottom">@dimen/detail_basic_spacing</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Label.Table">
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="RegularText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="RegularText.Basic">
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">@dimen/wrapper_spacing_block</item>
        <item name="android:layout_marginTop">@dimen/detail_basic_spacing</item>
        <item name="android:layout_marginBottom">@dimen/detail_basic_spacing</item>
    </style>

    <style name="RegularText.Basic.Suffix">
        <item name="android:layout_marginRight">0dip</item>
    </style>

    <style name="SectionTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/color_basic_bg1</item>
        <item name="android:layout_marginBottom">@dimen/wrapper_spacing_block</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/detail_basic_spacing</item>
        <item name="android:paddingBottom">@dimen/detail_basic_spacing</item>
    </style>

    <style name="ExpandableArrow">
        <item name="android:layout_marginLeft">@dimen/detail_arrow_spacing</item>
    </style>

    <style name="PictureCounter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">9sp</item>
    </style>

    <!-- Card view styles -->
    <style name="CardText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="FilePickerTheme" parent="NNF_BaseTheme"></style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert"></style>

</resources>
